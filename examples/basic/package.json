{
  "name": "plotly",
  "version": "1.0.0",
  "scripts": {
    "start": "idyll index.idl --css styles.css --layout blog --spellcheck",
    "build:template": "cat _template.html| github-cornerify > _index.html",
    "build:html": "mkdir -p build && idyll index.idl --layout blog --css styles.css --build | uglifyjs -c -m > build/index.js; cp .idyll/styles.css build/",
    "build:images": "mkdir -p build/images && cp -r images/* build/images/",
    "build:data": "mkdir -p build/data && cp -r data/* build/data/",
    "build": "npm run build:template && npm run build:html && npm run build:data && npm run build:images",
    "deploy": "npm run build && gh-pages -d ./build"
  },
  "devDependencies": {
    "gh-pages": "^0.12.0",
    "github-cornerify": "^1.0.7",
    "idyll-component": "^1.0.5",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "scrollwatch": "^1.2.0",
    "uglify-js": "^2.8.22"
  },
  "dependencies": {
    "idyll": "^1.0.25"
  },
  "github-corner": {
    "url": "https://github.com/idyll-lang/idyll-loader-component"
  }
}
